html
  head
    title='Post a Thread - GameXfer'
    link(href='/style/index.css' rel='stylesheet' type='text/css')

    script(src='/js/build.js' async='true')

    link(href='//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css' rel='stylesheet')

    link(href='https://s3-us-west-2.amazonaws.com/s.cdpn.io/67239/animate.min.css' rel='stylesheet')

    link(rel='icon' type='image/png' href='/images/treasure-64.png')
  body
    include header
    if forum
      .create-thread-page
        .auth-ui-panel
          .auth-entry-header
            div(class='left logo').
              <span>Game</span>Xfer
          form.js-signup-form
            .auth-entry-form
              .subtitle.
                Create a thread in <a href='/f/'+forum.forumId>#{forum.title}</a>
              input(class='js-create-thread-title' type='text' placeholder='Title')
              input(class='js-create-thread-description' type='email' placeholder='Description')
              input(class='js-create-thread-text' type='text' placeholder='Text')
            .auth-entry-footer
              a(href='/f/'+forum.forumId class='left').
                Back
              input(class='submit-auth-button js-signup' type='submit' value='Submit')
          div(class='auth-display-message animated fadeIn hide js-signup-status-message')
      .preview.
        previewww
    else
      p.
        Invalid thread.
