extends layout

block head
  title='Post a Comment - GameXfer'
  link(href='/style/index.css' rel='stylesheet' type='text/css')

  script(src='/js/build.js' async='true')
    
  link(rel='icon' type='image/png' href='/images/treasure-64.png')
block body
  include header
  if thread
    .create-comment-page
      .ui-panel.medium-ui-panel
        .ui-panel-header
          a(class='left logo' href='/').
            <span>Game</span>Xfer
        .create-comment-form
          .js-forum-id(class='hide' data-forum-id=thread.forumId)
          .js-thread-id(class='hide' data-thread-id=thread.threadId)
          .ui-panel-body
            .ui-panel-subtitle
              p.inline-block.
                Post a comment in&nbsp;
              a(href='/f/'+thread.forumId+'/t/'+thread.threadId).
                #{thread.title}
            .create-comment-container
              div#editor(data-placeholder='Compose a comment')
          .ui-panel-footer
            a(href='/f/'+thread.forumId+'/t/'+thread.threadId class='left').
              Back
            input(class='submit-ui-panel-button js-create-comment' type='submit' value='Submit')
        div(class='ui-panel-display-message animated fadeIn hide js-create-comment-message')
  else
    p.
      Invalid thread to comment on. Please try again.
  include footer