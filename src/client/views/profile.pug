doctype html
html(lang='en')
  head
    link(rel='stylesheet' href='/style/index.css')
    script(src='/js/build.js')
    if profile
      title.
        #{profile.displayUsername} - GameXfer
    else
      title.
        Profile not found - GameXfer
    link(rel='icon' type='image/png' href='/images/treasure-64.png')
  body
    include header
    if profile
      .row.mt-l
        .col-md-2
          //- empty
        .col-md-3
          p.profile-picture.
            Prof pic
          p.profile-username.
            #{profile.displayUsername}
          p.inline-block.
            Joined:&nbsp;#{moment(profile.createdAt).format('MMMM Do, YYYY')}
          p.
            Posts: #{profile.posts}
          p.inline-block.
            Coins: #{profile.xferCoin}
          img(src='/images/coins-32.png' class='inline-block  xfer-coin-image')
        .col-md-5
          p.profile-bio!=profile.biography
        .col-md-2
          //- empty
    else
      .center-text
        h3.mt-4.
          User not found.
        a(href='/')
          p.mt-2.
            Home
    include footer