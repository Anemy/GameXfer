doctype html
html(lang='en')
  head
    link(rel='stylesheet' href='/style/index.css')
    script(src='/js/build.js')
    title='Thread Tracker - GameXfer'

    link(rel='icon' type='image/png' href='/images/treasure-64.png')
  body
    include header
    .forum-page
      p.forum-title.
        Thread Tracker
      p.forum-information.
        This view shows all of the threads you are currently tracking.
      .thread-table-header
        .col-md-1
          .center-text.pl-3.
            Type
        .col-md-15.
          Title &amp; Description
        .col-md-2.
          Comments
        .col-md-2.
          Views
        .col-md-4.
          Last Comment
      if threads ? threads.length === 0 : false
        .thread-header.center-text
          .col-md-24
            p.mt-2.
              No threads currently tracked.
            br
            p.inline-block.
              You can track threads by clicking the 
            .forum-ui-button.inline-block
              i(class='fa  fa-plus')
              p.pl-1.inline-block.
                Track Thread
            p.inline-block.
              &nbsp;button which is present when viewing threads.

      else
        each thread in threads
          .thread-header
            .col-md-1
              if thread.type
                .center-text
                  img.thread-type-img(src='/images/thread-types/'+thread.type+'-32.png' title=thread.type)
            .col-md-15
              a(href='/f/'+thread.forumId+'/t/'+thread.threadId)
                p(class='thread-header-title').
                  #{thread.title}
                p(class='thread-header-description').
                  #{thread.description}
              .thread-header-author-time
                if thread.author
                  a(href='/u/'+thread.author.username)
                    p(class='thread-header-author inline-block').
                      #{thread.author.displayUsername}
                  p.inline-block.
                    &nbsp;
                p(class='thread-header-info  inline-block')=moment(thread.createdAt).fromNow()
            .col-md-2.
              #{thread.commentsLength}
            .col-md-2.
              #{thread.views}
            .col-md-4
              if thread.mostRecentCommentAuthor
                a(href='/u/'+thread.mostRecentCommentAuthor.username)
                  p.thread-header-author.
                    #{thread.mostRecentCommentAuthor.displayUsername}
                p(class='thread-header-info')=moment(thread.mostRecentCommentTime).fromNow()
    include footer
