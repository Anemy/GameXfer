html
  head
    title='Login - GameXfer'
    link(href='/style/index.css' rel='stylesheet' type='text/css')

    script(src='/js/build.js' async='true')

    link(rel='icon' type='image/png' href='/images/treasure-64.png')
  body
    .login-page
      .auth-ui-panel
        .auth-entry-header
          div(class='left logo')
            <span>Game</span>Xfer
        .auth-entry-form
          .subtitle.
            Login or <a href='/signup'>Register</a>
          input(class="js-login-username-input" type='text' placeholder='Username')
          input(class="js-login-password-input" type='password' placeholder='Password')
        .auth-entry-footer
          a(href='/forgot-password' class='left').
            Forgot your password?
          a(class='submit-auth-button js-login').
            Login
        div(class='auth-display-message animated fadeIn hide js-login-status-message')
